  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Tests",
      "cwd": "${workspaceFolder}/server",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "outputCapture": "std",
      "args": [
        "--timeout",
        "999999",
        "--colors",
        "${workspaceFolder}/server/test/unit"
      ],
      "internalConsoleOptions": "openOnSessionStart",
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Test",
      "cwd": "${workspaceFolder}/server",
      "program": "${workspaceFolder}/server/test/integration/test.js",
      "outputCapture": "std",
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Server",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/server/src/index.js",
      "outputCapture": "std",
      "cwd": "${workspaceFolder}/server"
    }
  ]
}