  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Tests",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "outputCapture": "std",
      "env": {
        "NODE_ENV": "debug"
      },
      "args": [
        "--timeout",
        "999999",
        "--colors",
        "${workspaceFolder}/test/unit"
      ],
      "internalConsoleOptions": "openOnSessionStart",
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Test",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/test/integration/test.js",
      "env": {
        "NODE_ENV": "macdefault"
      },
      "outputCapture": "std",
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Server",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/src/index.js",
      "env": {
        "NODE_ENV": "debug",
        "LUCINDA_SIMPLEWEB": "enabled"
      },
      "outputCapture": "std",
      "cwd": "${workspaceFolder}"
    }
  ]
}